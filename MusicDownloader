import youtube_dl

def search_and_download_music(search_query, output_path):
    ydl_opts = {
        'format': 'bestaudio/best',
        'postprocessors': [{
            'key': 'FFmpegExtractAudio',
            'preferredcodec': 'mp3',
            'preferredquality': '192',
        }],
        'outtmpl': output_path + '/%(title)s.%(ext)s',
    }

    with youtube_dl.YoutubeDL(ydl_opts) as ydl:
        try:
            info_dict = ydl.extract_info(search_query, download=True)
            print("Downloaded:", info_dict['title'])
        except Exception as e:
            print("Error:", e)

if __name__ == "__main__":
    search_query = input("Enter the name of the song you want to search: ")
    output_path = input("Enter the output directory path: ")
    search_and_download_music(search_query, output_path)
